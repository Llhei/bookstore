<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <security-constraint>
        <display-name>Security Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>Secret Web Application</web-resource-name>
            <url-pattern>*.do</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
            <role-name>sprole</role-name>
            <role-name>guest</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Security Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>Secret Web Application</web-resource-name>
            <url-pattern>/editAccount.do</url-pattern>
            <url-pattern>/viewdetail.do</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
            <role-name>sprole</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Security Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>Secret Web Application</web-resource-name>
            <url-pattern>/addbooks.do</url-pattern>
            <url-pattern>/refund.do</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <!--<realm-name>Form-Based</realm-name>-->
        <form-login-config>
            <form-login-page>/login.do</form-login-page>
            <form-error-page>/error.do</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <role-name>sprole</role-name>
    </security-role>
    <servlet>
        <servlet-name>addbooks</servlet-name>
        <servlet-class>main.addbooks</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>browse</servlet-name>
        <servlet-class>main.browse</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editAccount</servlet-name>
        <servlet-class>main.editAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>refund</servlet-name>
        <servlet-class>main.refund</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewdetail</servlet-name>
        <servlet-class>main.viewdetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>authentication.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewcart</servlet-name>
        <servlet-class>main.viewcart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>payment</servlet-name>
        <servlet-class>main.payment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>confirmation</servlet-name>
        <servlet-class>main.confirmation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginError</servlet-name>
        <servlet-class>authentication.loginError</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>authentication.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>authentication.signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>guestLogin</servlet-name>
        <servlet-class>authentication.guestLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addbooks</servlet-name>
        <url-pattern>/addbooks.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>browse</servlet-name>
        <url-pattern>/browse.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editAccount</servlet-name>
        <url-pattern>/editAccount.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>refund</servlet-name>
        <url-pattern>/refund.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewdetail</servlet-name>
        <url-pattern>/viewdetail.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewcart</servlet-name>
        <url-pattern>/viewcart.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>payment</servlet-name>
        <url-pattern>/payment.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>confirmation</servlet-name>
        <url-pattern>/confirmation.do</url-pattern>
