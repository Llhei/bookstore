        <servlet-name>guestLogin</servlet-name>
        <url-pattern>/guestLogin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>browse.do</welcome-file>
    </welcome-file-list>
</web-app>
